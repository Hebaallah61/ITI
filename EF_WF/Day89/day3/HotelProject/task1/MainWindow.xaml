                <GradientStop Color="#FF6E8EAB" Offset="0.624"/>
                <GradientStop Color="#FFD3E6F7" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label x:Name="label" Content="User Name" HorizontalAlignment="Left" Margin="184,72,0,0" VerticalAlignment="Top" Width="146" Height="39" FontSize="25px">
