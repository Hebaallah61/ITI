@model IEnumerable<task1.Models.Order_>

@{
    ViewBag.Title = "Index";
}



<h2 style="display:flex">
  
    All Orders <button class="btn btn-dark" style="margin-left: 600px"><a href="/Order_/Create" class="text-decoration-none" style="color:white"> Add New Order </a></button>
    <form action="~/Order_" method="post" style="color:white; margin-left:10px; display:flex">
        @Html.DropDownList("CustID", new SelectList(ViewBag.CustOrders, "CustID", "Name"), htmlAttributes: new { @class = "form-control" })
        <button type="submit" class="btn btn-dark" style="font-size:20px">OK</button>
    </form>
</h2>
<table class="table table-hover table-cadetblue" style="color:white">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Client_.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Client_.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
       
            

        <td> <button class="btn btn-outline-info"><a href="/Order_/Details/@item.Id" class="text-decoration-none" style="color:white"> Details  </a></button> </td>
        <td> <button class="btn btn-outline-warning"><a href="/Order_/Edit/@item.Id" class="text-decoration-none" style="color:white"> Edit  </a></button> </td>
        <td> <button class="btn btn-outline-danger"><a href="/Order_/Delete/@item.Id" class="text-decoration-none delete-item" style="color:white"> Delete  </a></button> </td>

      
    </tr>
}

</table>
